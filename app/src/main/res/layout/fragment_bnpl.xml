<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".ui.bnpl.BnplFragment">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="731dp"
            android:background="@drawable/bg_bnpl"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="@+id/bnpl_1"
            app:layout_constraintStart_toEndOf="@+id/bnpl_1"
            tools:context=".ui.bnpl.BnplFragment">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/cbox_bnpl"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/bnpl_5"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/pop_sb"
                android:gravity="center"

                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="5"
                android:shadowRadius="2"

                android:text="Design, Drawing, and planning (Sign and Seal)"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.797"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bnpl_6" />

            <TextView
                android:id="@+id/bnpl_7"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pop_sb"

                android:gravity="left"
                android:lineSpacingExtra="5sp"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"

                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="Assistance to get Bank Loan to finance your project with the help of our partnered Financial Institution."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/bnpl_5"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/bnpl_5"
                app:layout_constraintTop_toBottomOf="@+id/bnpl_5" />

            <TextView
                android:id="@+id/bnpl_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/pop_sb"
                android:gravity="center"
                android:shadowColor="@color/text_shadow"

                android:shadowDx="1"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="WE OFFER:"

                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bnpl_4" />

            <TextView
                android:id="@+id/bnpl_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pop_r"
                android:gravity="center"
                android:shadowColor="@color/text_shadow"

                android:shadowDx="1"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="OUR GOAL THEN AND NOW IS TO PROVIDE QUALITY ON-TIME  PROJECTS."

                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bnpl_3" />

            <TextView
                android:id="@+id/bnpl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_eb"
                android:gravity="center"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="5"

                android:shadowRadius="2"
                android:text="NO PROBLEM!"
                android:textColor="#FFFFFF"
                android:textSize="24sp"

                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bnpl_" />

            <TextView
                android:id="@+id/bnpl_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/pop_eb"
                android:gravity="center"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="5"

                android:shadowRadius="2"
                android:text="NOT ENOUGH BUDGET?"
                android:textColor="#ECBC31"
                android:textSize="24sp"

                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bnpl_1" />

            <TextView
                android:id="@+id/bnpl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_eb"
                android:gravity="center"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="5"
                android:shadowRadius="2"

                android:text="PAY LATER"
                android:textColor="#ECBC31"
                android:textSize="33sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bnpl_1"
                app:layout_constraintTop_toTopOf="@+id/bnpl_1" />

            <TextView
                android:id="@+id/bnpl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:fontFamily="@font/pop_eb"
                android:gravity="center"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="5"
                android:shadowRadius="2"

                android:text="BUILD NOW"
                android:textColor="#FFFFFF"
                android:textSize="33sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toStartOf="@+id/bnpl_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/cbox_bnpl"
                app:layout_constraintBottom_toBottomOf="@+id/bnpl_5"
                app:layout_constraintStart_toStartOf="@+id/bnpl_4"
                app:layout_constraintTop_toTopOf="@+id/bnpl_5"
                app:layout_constraintVertical_bias="1.0" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="391dp"
                android:layout_height="226dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/bnpl_4"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="@+id/bnpl_4"
                app:layout_constraintTop_toBottomOf="@+id/bnpl_7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#201D2D"
            tools:context=".ui.contactus.ContactusFragment">

            <TextView
                android:id="@+id/textContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/pop_eb"
                android:text="SEND US A MESSAGE"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textContactUsGetInTouch"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/pop_r"
                android:gravity="center"
                android:text="We would love to hear from you.
Get in touch to discover what we can do for you."
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/editTextNameContactUs"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/editTextNameContactUs"
                app:layout_constraintTop_toBottomOf="@+id/textContactUs" />

            <EditText
                android:id="@+id/editTextNameContactUs"
                android:layout_width="351dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/inputbg_contactus"
                android:ems="10"
                android:fontFamily="@font/pop_r"
                android:hint="Name"
                android:inputType="textFilter"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textContactUsGetInTouch"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextEmailContactUs"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/pop_r"
                android:background="@drawable/inputbg_contactus"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/editTextNameContactUs"
                app:layout_constraintStart_toStartOf="@+id/editTextNameContactUs"
                app:layout_constraintTop_toBottomOf="@+id/editTextNameContactUs" />

            <EditText
                android:id="@+id/editTextSubjectContactUs"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/pop_r"
                android:background="@drawable/inputbg_contactus"
                android:ems="10"
                android:hint="Subject"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/editTextEmailContactUs"
                app:layout_constraintStart_toStartOf="@+id/editTextEmailContactUs"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmailContactUs" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/pop_r"
                android:background="@drawable/inputbg_contactus"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Message"
                android:lines="7"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/editTextSubjectContactUs"
                app:layout_constraintStart_toStartOf="@+id/editTextSubjectContactUs"
                app:layout_constraintTop_toBottomOf="@+id/editTextSubjectContactUs" />

            <Button
                android:id="@+id/btnSubmitBuyNowPayLater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white"
                android:drawableTint="#000000"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Send Message"
                android:textColor="#1E42FF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>